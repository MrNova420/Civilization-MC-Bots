{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "commonjs"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-constant-condition": ["error", { "checkLoops": false }],
    "prefer-const": "warn",
    "no-var": "warn",
    "eqeqeq": ["warn", "smart"],
    "curly": ["warn", "multi-line"],
    "no-throw-literal": "error",
    "no-undef": "error",
    "no-unreachable": "error",
    "no-duplicate-case": "error"
  }
}
